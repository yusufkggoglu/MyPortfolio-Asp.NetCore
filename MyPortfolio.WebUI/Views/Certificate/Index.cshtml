@using MyPortfolio.Entities.Concrete
@model List<Certificate>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header">
    <h3 class="card-title">Sertifika Listesi</h3>
</div>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    ID
                </th>
                <th style="width: 30%">
                    Başlık
                </th>
                <th style="width:20%">
                    Alınan Yer
                </th>
                <th style="width:20%">
                    Durum
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.CertificateID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Brand
                </td>
                <td>
                    @item.Status
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-info btn-sm" href="/Certificate/ShowCertificate/@item.CertificateID">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Göster
                    </a>
                    <a class="btn btn-info btn-sm" href="/Certificate/EditCertificate/@item.CertificateID">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                    <a class="btn btn-danger btn-sm" href="/Certificate/DeleteCertificate/@item.CertificateID">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Certificate/AddCertificate" class="btn btn-primary">Yeni Sertifika Ekle</a>
</div>

