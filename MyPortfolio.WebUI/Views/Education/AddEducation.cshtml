
@{
    ViewData["Title"] = "AddEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Eğitim Ekleme Formu</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Okul</label>
                <input type="text" class="form-control" name="School" placeholder="Okul">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Bölüm</label>
                <input type="text" class="form-control" name="Department" placeholder="Bölüm">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Açıklama</label>
                <br />
                <textarea rows="3" cols="100" name="Description"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

